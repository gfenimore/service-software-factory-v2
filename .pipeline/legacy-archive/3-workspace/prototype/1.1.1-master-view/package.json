{
  "name": "1.1.1-master-view-prototype",
  "version": "1.0.0",
  "description": "Master View Sub-Module - Prototype Line",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "serve": "http-server -p 8080"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "http-server": "^14.1.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    }
  }
}