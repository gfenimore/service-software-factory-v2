{
  "appName": "Service Manager",
  "pattern": "three-column",
  "proportions": {
    "left": "260px",
    "center": "1fr",
    "right": "320px"
  },
  "context": {
    "userIntent": "reviewing",
    "deviceType": "desktop",
    "userRole": "dispatcher",
    "timeContext": "morning",
    "taskContext": "daily-operations"
  },
  "regions": {
    "left": {
      "component": "navigation",
      "config": "nav-config-sample.json",
      "collapsible": true
    },
    "center": {
      "component": "viewforge-view",
      "config": "field-config-account-list-view-1755720191672.json",
      "defaultView": "list"
    },
    "right": {
      "component": "details-panel",
      "config": "dynamic",
      "initialState": "empty"
    }
  },
  "interactions": [
    {
      "when": "center.item.selected",
      "then": "right.show(item.details)"
    },
    {
      "when": "nav.item.clicked",
      "then": "center.load(nav.item.view)"
    }
  ],
  "breakpoints": {
    "tablet": "collapse-right",
    "mobile": "stack-all"
  }
}