{
  "name": "Default Theme",
  "description": "Clean, professional theme with blue accents",
  "colors": {
    "primary": "blue-600",
    "primaryHover": "blue-700",
    "secondary": "gray-600",
    "success": "green",
    "warning": "yellow",
    "error": "red",
    "info": "blue"
  },
  "components": {
    "table": {
      "container": "overflow-x-auto shadow-md rounded-lg",
      "base": "min-w-full bg-white",
      "header": "bg-gray-50 border-b-2 border-gray-200",
      "headerCell": "px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider",
      "headerCellHover": "hover:bg-gray-100",
      "row": "hover:bg-gray-50 transition-colors cursor-pointer",
      "cell": "px-6 py-4 whitespace-nowrap text-sm text-gray-900",
      "divider": "divide-y divide-gray-200"
    },
    "button": {
      "primary": "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700",
      "secondary": "px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-50",
      "disabled": "disabled:opacity-50"
    },
    "input": {
      "base": "px-4 py-2 border border-gray-300 rounded-md",
      "focus": "focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
    },
    "badge": {
      "base": "px-2 py-1 text-xs rounded-full",
      "active": "bg-green-100 text-green-800",
      "inactive": "bg-gray-100 text-gray-800",
      "pending": "bg-yellow-100 text-yellow-800",
      "error": "bg-red-100 text-red-800"
    },
    "loading": {
      "spinner": "animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"
    }
  },
  "spacing": {
    "page": "space-y-4",
    "section": "space-y-2",
    "compact": "space-y-1"
  },
  "typography": {
    "title": "text-2xl font-bold text-gray-900",
    "subtitle": "text-lg font-semibold text-gray-700",
    "body": "text-sm text-gray-900",
    "caption": "text-sm text-gray-500"
  }
}