{
  "name": "Healthcare Theme",
  "description": "Calming, accessible theme for healthcare applications",
  "colors": {
    "primary": "teal-600",
    "primaryHover": "teal-700",
    "secondary": "slate-600",
    "success": "emerald",
    "warning": "amber",
    "error": "rose",
    "info": "sky"
  },
  "components": {
    "table": {
      "container": "overflow-x-auto shadow-lg rounded-xl",
      "base": "min-w-full bg-white",
      "header": "bg-teal-50 border-b-2 border-teal-200",
      "headerCell": "px-8 py-4 text-left text-sm font-semibold text-teal-800 tracking-wide",
      "headerCellHover": "hover:bg-teal-100",
      "row": "hover:bg-teal-50/30 transition-colors cursor-pointer",
      "cell": "px-8 py-5 text-base text-slate-900",
      "divider": "divide-y divide-teal-100"
    },
    "button": {
      "primary": "px-6 py-3 bg-teal-600 text-white rounded-lg hover:bg-teal-700 text-base font-medium",
      "secondary": "px-6 py-3 border-2 border-teal-300 text-teal-700 rounded-lg hover:bg-teal-50",
      "disabled": "disabled:opacity-50 disabled:cursor-not-allowed"
    },
    "input": {
      "base": "px-5 py-3 border-2 border-slate-300 rounded-lg text-base",
      "focus": "focus:ring-4 focus:ring-teal-500/20 focus:border-teal-500"
    },
    "badge": {
      "base": "px-3 py-1.5 text-sm font-medium rounded-lg",
      "active": "bg-emerald-100 text-emerald-800 border border-emerald-200",
      "inactive": "bg-slate-100 text-slate-800 border border-slate-200",
      "pending": "bg-amber-100 text-amber-800 border border-amber-200",
      "error": "bg-rose-100 text-rose-800 border border-rose-200"
    },
    "loading": {
      "spinner": "animate-spin rounded-full h-16 w-16 border-4 border-teal-200 border-t-teal-600"
    }
  },
  "spacing": {
    "page": "space-y-6",
    "section": "space-y-4",
    "compact": "space-y-2"
  },
  "typography": {
    "title": "text-3xl font-bold text-slate-900",
    "subtitle": "text-xl font-semibold text-slate-700",
    "body": "text-base text-slate-900",
    "caption": "text-base text-slate-600"
  }
}