  "contextRules": [
    {
      "condition": "time >= 6:00 && time < 10:00 && role === 'dispatcher'",
      "useContext": "dispatcher-morning"
    },
    {
      "condition": "time >= 10:00 && time < 16:00 && role === 'dispatcher'",
      "useContext": "dispatcher-active"
    },
    {
      "condition": "role === 'technician' && location === 'field'",
      "useContext": "technician-field"
    },
    {
      "condition": "role === 'manager'",
      "useContext": "manager-strategic"
    },
    {
      "condition": "role === 'csr'",
      "useContext": "customer-service"
    }
  ],
  
  "adaptiveFeatures": {
    "learningMode": true,
    "suggestions": {
      "enabled": true,
      "maxItems": 3,
      "position": "top"
    },
    "frequentlyUsed": {
      "enabled": true,
      "threshold": 5,
      "position": "section"
    },
    "contextualAlerts": {
      "enabled": true,
      "types": ["urgent", "deadline", "anomaly"]
    },
    "predictiveLoading": {
      "enabled": true,
      "preloadNext": 2
    }
  },
  
  "personalization": {
    "allowCustomization": true,
    "features": {
      "pinItems": true,
      "hideItems": true,
      "reorderItems": true,
      "customShortcuts": true,
      "colorCoding": true
    }
  }
}